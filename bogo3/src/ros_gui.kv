FloatLayout:
	# se puede agregar estilo (canvas) a un layout tambien

	MDLabel:
		id: label1
		text: "Label 1"
		halign: "center"
		size_hint: 1, 1
		pos_hint: {"center_x": .25, "center_y": .8}

	MDRectangleFlatButton:
		style: "elevated"
		text: "Elevated"
		halign: "center"
		pos_hint: {"center_x": .50, "center_y": .8}
		on_press: app.my_func(*args)

	MDSlider:
		id: slider1
		min: 0
		max: 100
		hint: True
		halign: "center"
		on_value_pos: app.slider1(self.value) #esto manda el valor actual una func de python
		color: "red"

	MDLabel:
		id: label2
		text: "valor slider: %s" % int(slider1.value)
		halign: "center"
		size_hint: 1, 1
		halign: "center"
		pos_hint: {"center_x": .5, "center_y": 0.2}

	MDLabel:
		id: label3
		canvas:
			Color:
				rgba: (0,0,0,0.2)
			RoundedRectangle:
				# source: "aqui se pone el path a una img"
				size: self.size	
				pos: self.pos
				radius: [25]

		text: "Label 3"
		halign: "center"
		size_hint: 0.3, 0.1
		halign: "center"
		pos_hint: {"center_x": .75, "center_y": 0.5}
